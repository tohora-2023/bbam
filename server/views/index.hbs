<div class="bg-gray-300 border border-black">
  <div class="flex-row justify-center items-center h-screen space-x-0.5">
    <ul class="grid grid-cols-5 gap-4 max-h-12 ">
      {{#each celebs}}
      <li class="p-3 hover:shadow-s">
        <img src="{{images}}" class="w-60 h-60 object-cover rounded-lg">
        <div class="mt-2 text-center">{{name}}</div>
        <div class="mt-4">
          <p class="text-center text-sm">{{description}}</p>
        </div>
      </li>
      {{/each}}
    </ul>

    <div class="flex flex-col justify-center items-center m-auto">
      <h3 class="mb-2 text-center">Upcoming Events:</h3>
      <div class="mt-4">
        <ul class="text-center">
          {{#each events}}
          <li>{{name}}</li>  
          {{/each}}
        </ul>
      </div>
      <p class="mt-4 text-center">Check out our <a href="./outcome" class="underline">events and outcome page</a> for more details!</p>
    </div>
  </div>
</div>
